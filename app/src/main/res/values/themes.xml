<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IncidencesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IncidencesApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitlesAbout">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="showResultsMain">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="buttons">
        <item name="android:background">@drawable/buttons</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SubtextAbout">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.IncidencesApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IncidencesApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>